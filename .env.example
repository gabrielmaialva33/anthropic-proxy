# API Keys (at least one is required)
ANTHROPIC_API_KEY=your_anthropic_api_key_here  # Required for Anthropic models
OPENAI_API_KEY=your_openai_api_key_here        # Required for OpenAI models

# Model Configuration
# High-performance models (BIG_MODEL options)
BIG_MODEL=o3-mini                 # Best balance of reasoning and cost for code tasks
# BIG_MODEL=gpt-4o                # Excellent general-purpose model with good coding abilities
# BIG_MODEL=o1                    # High-intelligence reasoning model, best for complex code tasks
# BIG_MODEL=gpt-4.5-preview       # Most capable GPT model, excellent for code but expensive

# Faster/cheaper models (SMALL_MODEL options)
SMALL_MODEL=gpt-4o-mini           # Fast, affordable model with good coding abilities
# SMALL_MODEL=gpt-3.5-turbo       # Cheaper alternative for simpler code tasks

# Feature Flags
USE_OPENAI_MODELS=True            # Set to False to use native Anthropic models instead

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8082
LOG_LEVEL=error                   # Options: debug, info, warning, error, critical